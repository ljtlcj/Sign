            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="联系号码："
                android:textSize="12sp" />

